{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2016",
    "module": "commonjs",
    "lib": ["DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "preserve",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["@vitest/browser/providers/playwright"]
  }
}
